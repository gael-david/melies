<%- include('partials/header') %> 


<main>
    <h2 class="sectionTitle centerTitle">Top <%= genreName %>  films</h2>
    <div id="resultsWrapper">
        <% for( let index = 0; index < genreFilms.results.length; index++ ) { %>
