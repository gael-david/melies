<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %> 
        <button type="button" style="top: -3px" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

